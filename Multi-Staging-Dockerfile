# Stage 1
FROM node:21 AS backend-builder

# Setup Work dir
WORKDIR /app

#code copy
COPY . .

#Install dependencies
RUN npm -i

# Stage 2
FROM node:21-slim

# Setup Work dir
WORKDIR /app

# Copy the above stage as compressed 
COPY from=backend-builder /app .

# Port
EXPOSE 5000

# App
CMD ["npm" , "start"]



